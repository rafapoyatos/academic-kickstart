	journal = {New Phytologist},
	author = {Poyatos, Rafael and Aguadé, David and Galiano, Lucía and Mencuccini, Maurizio and Martínez-Vilalta, Jordi},
	year = {2013},
	keywords = {canopy defoliation, hydraulic limits, nonstructural carbohydrates, Pinus sylvestris, Sap flow, Stomatal conductance, tree mortality, water potential},
