	pages = {1125--1159},
	file = {Cristóbal_2011_Combining remote sensing and GIS climate modelling to estimate daily forest.pdf:/media/rafa/Data/Recerca/Bibliografia/Zotero/Cristóbal/Hydrol. Earth Syst. Sci./2011/Cristóbal_2011_Combining remote sensing and GIS climate modelling to estimate daily forest.pdf:application/pdf;Scopus - Document details:/media/rafap/Data/Documents/Zotero/storage/7S7TT57W/display.html:text/html;Scopus - Document details:/media/rafap/Data/Documents/Zotero/storage/2V2PQD4R/display.html:text/html}
