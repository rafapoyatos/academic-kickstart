	author = {Sánchez-Costa, Elisenda and Poyatos, Rafael and Sabaté, Santiago},
	month = jul,
	year = {2015},
	note = {00005},
	keywords = {Automatic dendrometer, Growth-based water use efficiency, Tree transpiration, tree water deficit, water availability},
	pages = {24--37},
