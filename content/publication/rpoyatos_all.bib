	journal = {Biogeosciences Discussions},
	author = {Stoy, Paul C. and El-Madany, Tarek and Fisher, Joshua B. and Gentine, Pierre and Gerken, Tobias and Good, Stephen P. and Liu, Shuguang and Miralles, Diego G. and Perez-Priego, Oscar and Skaggs, Todd H. and Wohlfahrt, Georg and Anderson, Ray G. and Jung, Martin and Maes, Wouter H. and Mammarella, Ivan and Mauder, Matthias and Migliavacca, Mirco and Nelson, Jacob A. and Poyatos, Rafael and Reichstein, Markus and Scott, Russell L. and Wolf, Sebastian},
	month = mar,
	year = {2019},
	pages = {1--47},
