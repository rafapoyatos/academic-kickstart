	author = {da Costa, Antonio C. L. and Rowland, Lucy and Oliveira, Rafael S. and Oliveira, Alex A. R. and Binks, Oliver J. and Salmon, Yann and Vasconcelos, Steel S. and Junior, João A. S. and Ferreira, Leandro V. and Poyatos, Rafael and Mencuccini, Maurizio and Meir, Patrick},
	year = {2018},
	keywords = {drought, sap flux, transpiration, tree mortality, tropical forest, water cycling},
	pages = {249--258},
	file = {da Costa et al_Stand dynamics modulate water cycling and mortality risk in droughted tropical.pdf:/media/rafap/Data/Documents/Zotero/storage/NC5Z9Q5M/da Costa et al_Stand dynamics modulate water cycling and mortality risk in droughted tropical.pdf:application/pdf}
}

